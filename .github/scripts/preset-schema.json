{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Preset Configuration Schema",
    "description": "Schema for configuring jobs based on presets",
    "type": "object",
    "minProperties": 1,
    "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
            "title": "Preset",
            "type": "object",
            "properties": {
                "toolchain": {
                    "type": "string",
                    "description": "toolchain to use for building"
                },
                "runs-on": {
                    "type": "string",
                    "description": "runs-on for the workflow"
                }
            },
            "required": [],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
